{
    "name": "horizon-boilerplate",
    "version": "1.0.0",
    "description": "Horizon Boilerplate is a starter kit that uses Gulp 4, Express.js, Webpack/Babel/ES6, SASS, PUG, Lint and foundation-sites framework",
    "author": "Geoffrey Signorato <geoffrey.signorato@gmail.com>",
    "contributors": [
        {
            "name": "Burel Kiady Bezaka Razafindrabe",
            "email": "kiadyrazafindrabe@gmail.com"
        },
        {
            "name": "Shazad Mohammud Rusmaully",
            "email": "shezad.demonoid@gmail.com"
        }
    ],
    "license": "MIT",
    "main": "gulpfile.js",
    "engines": {
        "node": ">=10.1.0"
    },
    "scripts": {
        "format": "prettier --write 'app/{sass,js,routes}/**/*.{scss,js}'",
        "formatConfig": "prettier --write '*.{js,json,md}'",
        "eslint": "eslint app/js/ --ext .js --fix",
        "stylelint": "stylelint app/sass/**/*.scss --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "app/js/**/*.js": [
            "eslint --fix",
            "git add"
        ],
        "app/sass/**/*.scss": [
            "stylelint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "browser-sync": "^2.26.7",
        "del": "^5.0.0",
        "express": "^4.17.1",
        "gulp-cli": "^2.2.0",
        "lint-staged": "^9.0.2",
        "morgan": "^1.9.1",
        "pug": "^2.0.4",
        "stylelint-config-standard": "^18.3.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-preset-env": "^1.7.0",
        "beeper": "^2.0.0",
        "eslint": "^6.0.1",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-prettier": "^3.1.0",
        "fancy-log": "^1.3.3",
        "foundation-sites": "^6.5.3",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^6.1.0",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-header": "^2.0.7",
        "gulp-iconfont": "^10.0.3",
        "gulp-iconfont-css": "^3.0.0",
        "gulp-nodemon": "^2.4.2",
        "gulp-plumber": "^1.2.1",
        "gulp-pug": "^4.0.1",
        "gulp-pug-linter": "^1.2.0",
        "gulp-rename": "^1.4.0",
        "gulp-replace": "^1.0.0",
        "gulp-sass": "^4.0.2",
        "gulp-svgmin": "^2.2.0",
        "gulp-zip": "^5.0.0",
        "husky": "^3.0.0",
        "jquery": "^3.5.0",
        "moment": "^2.24.0",
        "path": "^0.12.7",
        "postcss-reporter": "^6.0.1",
        "postcss-scss": "^2.0.0",
        "prettier": "^1.18.2",
        "serve-favicon": "^2.4.5",
        "stylelint": "^10.1.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-recommended": "^2.2.0",
        "stylelint-prettier": "^1.1.1",
        "vinyl-ftp": "^0.6.1",
        "webpack": "^4.35.2",
        "webpack-stream": "^5.2.1"
    }
}
